generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  city       String
  sportType  String
  position   String
  age        Int
  skillLevel String
  fbProfile  FbProfile?
  Event      Event[]
}

model FbProfile {
  id     Int    @id @default(autoincrement())
  fbId   String @unique
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model Event {
  id                 Int      @id @default(autoincrement())
  name               String
  date               DateTime
  location           String
  duration           Int
  numberOfPlayers    Int
  description        String
  backgroundImageUrl String
  private            Boolean
  createdBy          User     @relation(fields: [userId], references: [id])
  userId             Int
}

enum ParticipationStatus {
  ATTENDING
  INTERESTED
  DECLINED
}

model EventParticipation {
  id        Int    @id @default(autoincrement())
  event     Event  @relation(fields: [eventId], references: [id])
  eventId   Int
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  status    ParticipationStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, userId])
}
